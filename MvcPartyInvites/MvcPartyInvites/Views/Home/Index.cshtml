@{
    ViewData["Title"] = "Home Page";
    var lst = MvcPartyInvites.Data.LocalData.GastList
    .Where
        (x => x.Aanwezig == true)
        .Select
        (y => $"({y.Naam} - {y.Email} - {y.Telefoon})").ToList();

    var lstAfw = MvcPartyInvites.Data.LocalData.GastList
    .Where
        (x => x.Aanwezig == false)
        .Select
        (y => $"({y.Naam} - {y.Email} - {y.Telefoon})").ToList();



}
<div class="text-center">
    <br />
    <a asp-controller="Gast" asp-action="Index">Schrijf je hier in!</a>
    <br />
    @if (Model.Count > 0)
    {
        <table>
            <tr>
                <th class="font-weight-bold">Aanwezig</th>
            </tr>

            @foreach (var gast in lst)
            {
                <tr>
                    <td>@gast</td>
                </tr>
            }


        </table>
        <br />
        <table>
            <tr>
                <th class="font-weight-bold">Afwezig</th>
            </tr>
            @foreach (var gast in lstAfw)
            {
                <tr>
                    <td>@gast</td>
                </tr>
            }
        </table>

        
    }
</div>
